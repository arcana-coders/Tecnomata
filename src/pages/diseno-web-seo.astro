---
import Layout from '../layouts/Layout.astro';
import SEOPageHero from '../components/sections/SEOPageHero.astro';
import WebProcess from '../components/sections/WebProcess.astro';
import WebFeatures from '../components/sections/WebFeatures.astro';
import WebCaseStudies from '../components/sections/WebCaseStudies.astro';
import Pricing from '../components/sections/Pricing.astro'; // Corrected import
import CTA from '../components/ui/CTA.astro';
---

<Layout 
  title="Diseño Web + SEO | Páginas que Venden | Tecnomata"
  description="Creamos páginas web que no solo se ven increíbles, sino que venden. Diseño moderno + SEO optimizado para hacer crecer tu negocio en Morelos."
>
  <section class="scroll-animate" data-animate="fade-up" data-once="true">
  <SEOPageHero
    subtitle="Diseño Web + SEO"
  title="Páginas web que <span class='text-blue-600'>Venden</span> de verdad"
    description="Diseño + SEO + Conversión. <strong>Un enfoque integral que funciona.</strong>"
    ctaText="Ver nuestro trabajo"
    ctaHref="/contacto"
    stats={[
      { number: '+150', suffix: '%', label: 'más citas online' },
      { number: '+200', suffix: '%', label: 'pedidos online' },
      { number: '3', suffix: 's', label: 'tiempos de carga' },
      { number: '100', suffix: '+', label: 'negocios felices' },
    ]}
  >
    <img slot="image" src="/images/icon-web.svg" alt="Diseño Web" class="w-full h-auto rounded-lg shadow-xl" />
  </SEOPageHero>
  </section>

  <section class="scroll-animate" data-animate="fade-up" data-once="true">
  <WebProcess steps={[
    { title: 'Análisis', description: 'Estudiamos tu negocio, competencia y audiencia para crear la estrategia perfecta.' },
    { title: 'Diseño', description: 'Diseño moderno, funcional y optimizado para convertir visitantes en clientes.' },
    { title: 'Desarrollo', description: 'Tecnologías modernas para una web rápida y lista para SEO.' },
    { title: 'Optimización', description: 'SEO, Analytics y medición de resultados desde el día uno.' },
  ]} />
  </section>

  <section class="scroll-animate" data-animate="fade-up" data-once="true">
    <WebFeatures />
  </section>

  <section class="scroll-animate" data-animate="fade-up" data-once="true">
    <WebCaseStudies />
  </section>

  <section class="scroll-animate" data-animate="fade-up" data-once="true">
  <Pricing 
    title="Planes de <span class='text-blue-500'>diseño</span> web"
    description="Elige el plan que mejor se adapte a las necesidades de tu negocio"
    plans={[
      { 
        name: 'Básico', price: '$8,000', period: 'único', description: 'Perfecto para emprender',
        features: ['Hasta 5 páginas', 'Diseño responsive', 'SEO básico', 'Formulario de contacto', '6 meses de soporte'],
        cta: 'Empezar ahora', href: '/contacto' 
      },
      { 
        name: 'Profesional', price: '$15,000', period: 'único', description: 'Ideal para crecer', 
        features: ['Hasta 10 páginas', 'Diseño personalizado', 'SEO avanzado', 'Panel administrador', 'Google Analytics', '6 meses de soporte'],
        cta: 'Empezar ahora', href: '/contacto', featured: true, badge: 'MÁS POPULAR' 
      },
      { 
        name: 'E-commerce', price: '$25,000', period: 'único', description: 'Para vender online',
        features: ['Tienda online completa', 'Pasarela de pagos', 'Control de inventario', 'SEO para productos', 'Capacitación incluida', '6 meses de soporte'],
        cta: 'Empezar ahora', href: '/contacto' 
      },
    ]}
  />
  </section>

  <section class="scroll-animate" data-animate="fade-up" data-once="true">
  <CTA 
    title="¿Listo para tener la web que tu <span class='text-orange-500'>negocio</span> merece?"
    subtitle="Conversemos sobre tu proyecto. Primera consulta completamente gratuita."
    ctaText="Obtener propuesta gratuita"
    ctaLink="/contacto"
    variant="strong"
  />
  </section>

</Layout>
