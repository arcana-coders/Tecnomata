---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/ui/Banner.astro';
import FAQPageHero from '../components/sections/FAQPageHero.astro';
import FAQCategories from '../components/sections/FAQCategories.astro';
import FAQContactCTA from '../components/sections/FAQContactCTA.astro';
import ContactInfoSection from '../components/sections/ContactInfoSection.astro';
---

<Layout 
  title="Preguntas Frecuentes | Tecnomata - SEO Local y Diseño Web"
  description="Resuelve tus dudas sobre SEO local, diseño web y posicionamiento en Google. FAQ completa sobre servicios de marketing digital en Morelos."
>

<!-- Banner superior simple -->
<Banner 
  text="❓ Preguntas Frecuentes • Resolvemos todas tus dudas • Consulta gratuita disponible"
  variant="accent"
  speed="normal"
/>

<!-- Hero Section -->
<section class="scroll-animate" data-animate="fade-up" data-once="true">
<FAQPageHero
  badgeText="Preguntas Frecuentes"
  title="Generamos <br/> <span class='text-blue-600'>negocio</span> para ti<br/> <span class='font-light text-gray-600'>Resolvamos tus dudas.</span>"
  subtitle="¿Algo en mente? <span class='text-gray-900 font-medium'>Let's make it happen!</span>"
  ctaText="Hacer una pregunta"
  ctaHref="/contacto"
/>
</section>

<!-- Sección de categorías -->
<section class="scroll-animate" data-animate="fade-up" data-once="true">
  <FAQCategories />
</section>

<!-- CTA de contacto -->
<section class="scroll-animate" data-animate="fade-up" data-once="true">
<FAQContactCTA
  title="¿No encuentras tu respuesta?"
  subtitle="Estamos aquí para resolver cualquier duda específica sobre tu proyecto."
  ctaText="Hacer una pregunta"
  ctaLink="/contacto"
  phone="777 409 4647"
/>
</section>

<!-- Información de contacto -->
<section class="scroll-animate" data-animate="fade-up" data-once="true">
<ContactInfoSection
  imageSrc="/images/hero-bg.webp"
  imageAlt="Oficina Tecnomata en Morelos"
  location="Morelos, México"
  hours="Lun - Vie 9:00 - 18:00"
  description="Tecnomata es una agencia especializada en SEO local y diseño web, enfocada en hacer crecer negocios locales con estrategias digitales que realmente funcionan."
/>
</section>

</Layout>