---
// src/components/ui/FAQItem.astro
import MaterialSymbol from './MaterialSymbol.astro';

interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details class="group bg-white border-2 border-gray-100 rounded-xl p-6 cursor-pointer transition-all duration-300 hover:shadow-md open:shadow-lg open:border-blue-200 font-dmsans">
  <summary class="flex justify-between items-center font-bold text-gray-900 text-lg leading-relaxed">
    <span>{question}</span>
    <span class="w-8 h-8 rounded-full border-2 border-blue-600 bg-white text-blue-600 flex items-center justify-center transition-transform duration-300 group-open:rotate-180">
      <MaterialSymbol icon="expand_more" size="md" class="text-blue-600" />
    </span>
  </summary>
  <div class="faq-content pt-4 text-gray-600 leading-relaxed text-base border-t border-gray-100 mt-4">
    {answer}
  </div>
</details>

<style>
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
