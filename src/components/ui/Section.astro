---
interface Props {
  variant?: 'default' | 'gray' | 'dark';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  animated?: boolean;
  delay?: number;
  className?: string;
}

const {
  variant = 'default',
  padding = 'lg',
  maxWidth = 'lg',
  animated = true,
  delay = 0,
  className = ''
} = Astro.props;

const variantClasses = {
  default: 'bg-white',
  gray: 'bg-gray-50',
  dark: 'bg-gray-900 text-white'
};

const paddingClasses = {
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-20',
  xl: 'py-20 md:py-24'
};

const maxWidthClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-screen-xl',
  full: 'max-w-none'
};
---

<section 
  class={`
    ${variantClasses[variant]}
    ${paddingClasses[padding]}
    ${animated ? 'scroll-animate animate-fade-in-up' : ''}
    ${className}
  `}
  style={animated && delay ? `animation-delay: ${delay}ms` : ''}
>
  <div class={`${maxWidthClasses[maxWidth]} mx-auto px-4 sm:px-6 lg:px-8`}>
    <slot />
  </div>
</section>
