---
// Banner.astro — Marquee continuo infinito sin cortes
import MaterialSymbol from "../ui/MaterialSymbol.astro";

interface BannerItem {
  icon: string;
  label: string;
}

interface Props {
  text?: string; // texto simple (fallback)
  items?: BannerItem[]; // ícono + texto (recomendado)
  variant?: 'default' | 'accent';
  speed?: 'slow' | 'normal' | 'fast';
}

const {
  text = "Potencia tu negocio online con Tecnomata",
  items,
  variant = 'default',
  speed = 'normal',
} = Astro.props as Props;

const variantClasses = {
  default: 'bg-gray-900 text-white',
  accent: 'bg-blue-600 text-white'
};

const speedClasses = {
  slow: 'animate-marquee-slow',
  normal: 'animate-marquee-normal',
  fast: 'animate-marquee-fast',
} as const;

// Duplicar items para scroll continuo
const duplicatedItems = items ? [...items, ...items, ...items] : null;
---

<div class:list={["relative overflow-hidden py-4 group", variantClasses[variant]]}>
  <div class="flex whitespace-nowrap">
    <div class:list={["flex items-center shrink-0", speedClasses[speed]]}>
      {duplicatedItems && duplicatedItems.length > 0 ? (
        duplicatedItems.map((item, index) => (
          <div class="inline-flex items-center mx-6 font-semibold text-base tracking-wider">
            <span class="mr-3 inline-flex items-center justify-center w-6 h-6 rounded-full border-2 border-blue-400 text-blue-400 bg-white shadow-sm shrink-0">
              <MaterialSymbol icon={item.icon} size="sm" weight={600} />
            </span>
            <span class="whitespace-nowrap">{item.label}</span>
            <span class="ml-4 w-1.5 h-1.5 bg-current/50 rounded-full" aria-hidden="true"></span>
          </div>
        ))
      ) : (
        <div class="inline-flex items-center mx-8 font-semibold text-base tracking-wider">
          <span class="w-2 h-2 bg-current rounded-full mr-4 opacity-60"></span>
          <span class="whitespace-nowrap">{text}</span>
        </div>
      )}
    </div>
  </div>
</div>

<style>
@keyframes marquee {
  0% { transform: translateX(0%); }
  100% { transform: translateX(-33.333333%); }
}

.animate-marquee-fast { 
  animation: marquee 8s linear infinite; 
}

.animate-marquee-normal { 
  animation: marquee 12s linear infinite; 
}

.animate-marquee-slow { 
  animation: marquee 20s linear infinite; 
}

/* Pausa al hover */
.group:hover .animate-marquee-fast,
.group:hover .animate-marquee-normal,
.group:hover .animate-marquee-slow { 
  animation-play-state: paused; 
}

/* Prevenir overflow horizontal global */
.group {
  max-width: 100vw;
}
</style>
