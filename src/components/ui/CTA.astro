---
// src/components/ui/CTA.astro
import IconWithColor from './IconWithColor.astro'; // Ensure this is the first import
interface Props {
    title: string;
    subtitle: string;
    ctaText: string;
    ctaLink: string;
    variant?: 'default' | 'strong' | 'dark'; // Added variant prop
}

const { title, subtitle, ctaText, ctaLink, variant = 'default' } = Astro.props as Props;

const variantClasses = {
  default: 'bg-gray-200 text-gray-900',
  strong: 'bg-primary text-white',
  dark: 'bg-gray-900 text-white'
}

const titleClasses = {
  default: 'text-gray-900',
  strong: 'text-white',
  dark: 'text-white'
}

const subtitleClasses = {
  default: 'text-gray-600',
  strong: 'text-white/80',
  dark: 'text-gray-300'
}

const ctaButtonClasses = {
  default: 'bg-primary hover:bg-primary-dark text-white',
  strong: 'bg-white text-primary hover:bg-neutral-100',
  dark: 'bg-primary hover:bg-primary-dark text-white'
}
---
<section class:list={["py-24 font-dmsans scroll-animate", variantClasses[variant]]} data-animate="scale-in" data-delay="250">
    <div class="max-w-4xl mx-auto px-6 text-center">
  <h2 class:list={["text-4xl lg:text-5xl font-black mb-6 tracking-tighter scroll-animate", titleClasses[variant]]} data-animate="slide-left" data-delay="350" set:html={title} />
  <p class:list={["text-lg leading-relaxed mb-8 scroll-animate", subtitleClasses[variant]]} data-animate="slide-right" data-delay="450" set:html={subtitle} />
  <a href={ctaLink} class:list={["px-10 py-4 rounded-lg font-bold text-lg transition-all duration-300 hover:scale-105 inline-block shadow-lg hover:shadow-blue-500/30 scroll-animate", ctaButtonClasses[variant]]} data-animate="scale-in" data-delay="550">
            <span class="flex items-center gap-2">
              <IconWithColor name="ads_click" color="white" size="lg" />
              {ctaText}
            </span>
        </a>
    </div>
</section>
