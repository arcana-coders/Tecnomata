---
// src/components/ui/ProblemCard.astro
import IconWithColor from './IconWithColor.astro';

interface Props {
  title: string;
  description: string;
  percentage: string;
  icon: string;
}

const { title, description, percentage, icon } = Astro.props as Props;
---

<div class="relative group overflow-hidden bg-white p-8 rounded-2xl border border-gray-200 shadow-sm hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300 font-dmsans flex flex-col ring-1 ring-transparent hover:ring-blue-100">
  <div class="absolute top-0 left-0 h-1 bg-gradient-to-r from-blue-600 via-blue-500 to-blue-400 w-0 group-hover:w-full transition-all duration-500"></div>

  <div class="w-14 h-14 rounded-full border-2 border-blue-600 bg-white text-blue-600 flex items-center justify-center mb-6">
    <IconWithColor name={icon} context="feature" size="xl" />
  </div>
  <h3 class="text-2xl font-extrabold tracking-tight text-gray-900 mb-3">{title}</h3>
  <p class="text-gray-600 leading-relaxed mb-2 flex-grow">{description}</p>
  <div class="mt-6 inline-flex items-center gap-2 self-start rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-sm font-semibold text-gray-700 group-hover:border-blue-200 group-hover:bg-white">
    <IconWithColor name="cancel" color="neutral" variant="light" size="sm" />{percentage}
  </div>
</div>