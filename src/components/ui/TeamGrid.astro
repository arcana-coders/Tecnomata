---
interface Props {
  title: string;
  tagline?: string;
  members: Array<{
    name: string;
    role: string;
    image?: string;
    description?: string;
    specialty?: string;
  }>;
  variant?: 'default' | 'minimal' | 'google';
}

const { title, tagline, members, variant = 'default' } = Astro.props;
---

<div class="relative">
  <!-- Header Section -->
  <div class="text-center mb-16">
    {tagline && (
      <div class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-50 to-purple-50 text-blue-700 px-6 py-3 rounded-full text-sm font-semibold mb-6 border border-blue-200/50">
        <span class="text-xl">ðŸ‘¥</span>
        <span>{tagline}</span>
      </div>
    )}
    <h2 class="text-4xl md:text-5xl font-black bg-gradient-to-r from-gray-900 via-blue-600 to-purple-600 bg-clip-text text-transparent mb-4">
      {title}
    </h2>
  </div>

  <!-- Team Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {members.map((member, index) => {
      const colors = ['blue', 'purple', 'pink', 'green', 'orange', 'red'];
      const color = colors[index % colors.length];
      
      return (
        <div class="group relative">
          <!-- Card -->
          <div class={`relative overflow-hidden rounded-3xl bg-gradient-to-br from-white/90 to-${color}-50/80 backdrop-blur-sm border border-${color}-200/50 p-8 hover:shadow-2xl hover:scale-[1.02] transition-all duration-700`}>
            
            <!-- Google dots como detalle -->
            <div class="absolute top-4 right-4 flex gap-1 opacity-40 group-hover:opacity-70 transition-opacity">
              <div class="w-1.5 h-1.5 bg-red-400 rounded-full"></div>
              <div class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></div>
              <div class="w-1.5 h-1.5 bg-green-400 rounded-full"></div>
              <div class="w-1.5 h-1.5 bg-blue-400 rounded-full"></div>
            </div>

            <!-- Avatar -->
            <div class="mb-6">
              {member.image ? (
                <img 
                  src={member.image} 
                  alt={member.name}
                  class="w-20 h-20 rounded-2xl object-cover mx-auto shadow-lg"
                  loading="lazy"
                />
              ) : (
                <div class={`w-20 h-20 bg-gradient-to-r from-${color}-400 to-${color}-600 rounded-2xl flex items-center justify-center mx-auto shadow-lg`}>
                  <span class="text-2xl font-bold text-white">
                    {member.name.split(' ').map(n => n[0]).join('')}
                  </span>
                </div>
              )}
            </div>

            <!-- Info -->
            <div class="text-center">
              <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:bg-gradient-to-r group-hover:from-blue-600 group-hover:to-purple-600 group-hover:bg-clip-text group-hover:text-transparent transition-all duration-500">
                {member.name}
              </h3>
              <p class={`text-${color}-600 font-semibold mb-3`}>
                {member.role}
              </p>
              
              {member.specialty && (
                <div class={`inline-flex items-center gap-2 bg-${color}-100 text-${color}-700 px-3 py-1 rounded-full text-xs font-medium mb-4`}>
                  <span class="w-1.5 h-1.5 bg-current rounded-full"></span>
                  {member.specialty}
                </div>
              )}
              
              {member.description && (
                <p class="text-gray-600 text-sm leading-relaxed">
                  {member.description}
                </p>
              )}
            </div>

            <!-- LÃ­nea decorativa -->
            <div class={`absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-${color}-400 to-${color}-600 opacity-60 group-hover:opacity-100 transition-opacity`}></div>
          </div>
        </div>
      );
    })}
  </div>

  <!-- CTA Section -->
  <div class="text-center mt-16">
    <div class="relative inline-block group">
      <div class="absolute -inset-1 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-300"></div>
      <div class="relative bg-white rounded-2xl px-8 py-4 border border-gray-200/50">
        <p class="text-gray-600 mb-4">Â¿Quieres formar parte del equipo?</p>
        <a href="/contacto" class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-300 hover:scale-105">
          <span>Ãšnete a nosotros</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
