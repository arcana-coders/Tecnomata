---
// src/components/ui/GuaranteeBar.astro
import IconWithColor from './IconWithColor.astro';
---
<section class="font-dmsans">
  <div class="w-full">
    <!-- Verde (full-bleed) -->
    <div class="w-full bg-gray-200 relative overflow-hidden" data-scroll-bar data-scroll-direction="random">
      <div class="absolute inset-0 bg-emerald-600 scroll-color-fill" style="width: 0%;"></div>
      <div class="relative mx-auto flex items-center justify-between px-4 py-3 md:px-6 md:py-4">
        <p class="text-white text-sm md:text-base font-medium leading-snug">Respuesta habitual en ~2 horas h√°biles</p>
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full border-2 border-white text-white bg-white/20 shadow-sm shrink-0">
          <IconWithColor name="schedule" color="white" size="lg" />
        </span>
      </div>
    </div>

    <!-- Amarilla (como el sol, full-bleed) -->
    <div class="w-full bg-gray-200 relative overflow-hidden" data-scroll-bar data-scroll-direction="random">
      <div class="absolute inset-0 bg-yellow-400 scroll-color-fill" style="width: 0%;"></div>
      <div class="relative mx-auto flex items-center justify-between px-4 py-3 md:px-6 md:py-4">
        <p class="text-white text-sm md:text-base font-medium leading-snug">Sin contratos forzosos</p>
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full border-2 border-white text-white bg-white/20 shadow-sm shrink-0">
          <IconWithColor name="lock_open" color="white" size="lg" />
        </span>
      </div>
    </div>

    <!-- Naranja (full-bleed) -->
    <div class="w-full bg-gray-200 relative overflow-hidden" data-scroll-bar data-scroll-direction="random">
      <div class="absolute inset-0 bg-orange-600 scroll-color-fill" style="width: 0%;"></div>
      <div class="relative mx-auto flex items-center justify-between px-4 py-3 md:px-6 md:py-4">
        <p class="text-white text-sm md:text-base font-medium leading-snug">Puedes pausar cuando quieras</p>
        <span class="inline-flex items-center justify-center w-8 h-8 rounded-full border-2 border-white text-white bg-white/20 shadow-sm shrink-0">
          <IconWithColor name="pause_circle" color="white" size="lg" />
        </span>
      </div>
    </div>
  </div>
</section>
