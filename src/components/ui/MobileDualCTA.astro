---
import MaterialSymbol from './MaterialSymbol.astro';
import CTATab from './CTATab.astro'; // 👈 1. Importamos el nuevo componente
---
<div class="fixed right-0 bottom-4 z-40 xl:hidden" style="right: max(0px, env(safe-area-inset-right))">
  <div class="absolute right-0 bottom-0 translate-y-0 h-36 w-10 bg-gradient-to-b from-black/5 via-white/30 to-black/5 backdrop-blur-sm rounded-l-2xl border border-white/20 shadow-[inset_0_1px_0_rgba(255,255,255,0.3)]"></div>
  <div class="relative flex flex-col items-end gap-2 pr-0.5">

    <CTATab
      href="tel:7774094647"
      ariaLabel="Llamar ahora"
      bgColorClasses="bg-gradient-to-b from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800"
      dataAction="call"
      dataUrl="tel:7774094647"
    >
      <MaterialSymbol icon="call" size="xl" />
    </CTATab>

    <CTATab
      href="https://wa.me/5217774094647"
      ariaLabel="WhatsApp"
      bgColorClasses="bg-gradient-to-b from-green-500 to-green-700 hover:from-green-600 hover:to-green-800"
      dataAction="whatsapp"
      dataUrl="https://wa.me/5217774094647"
    >
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.905 3.488"/>
      </svg>
    </CTATab>

    <!-- Scroll to top (tercera pestaña) -->
    <CTATab
      href="#"
      ariaLabel="Ir arriba"
  bgColorClasses="bg-gradient-to-b from-slate-500 to-slate-700 hover:from-slate-600 hover:to-slate-800"
  dataAction="top"
    >
      <MaterialSymbol icon="arrow_upward" size="xl" />
    </CTATab>

  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('a[data-action]');
    tabs.forEach((el) => {
      el.addEventListener('click', (e) => {
        const anchor = e.currentTarget as HTMLElement;
        if (!anchor) return;
        const action = anchor.getAttribute('data-action');
        const url = anchor.getAttribute('data-url') || '';

        // Evitar acción inmediata para permitir animación
        e.preventDefault();
        // Animación: pulso de zoom suave
        anchor.classList.remove('cta-zoom');
        // Forzar reflujo para reiniciar la animación si se hace clic varias veces
        // @ts-ignore
        void (anchor as any).offsetWidth;
        anchor.classList.add('cta-zoom');

        setTimeout(() => {
          if (action === 'call' || action === 'whatsapp') {
            if (url) {
              // Para WhatsApp abrir en nueva pestaña; para call, navegar
              if (action === 'whatsapp') {
                window.open(url, '_blank', 'noopener,noreferrer');
              } else {
                window.location.href = url;
              }
            }
          } else if (action === 'top') {
            try {
              window.scrollTo({ top: 0, behavior: 'smooth' });
            } catch (_) {
              window.scrollTo(0, 0);
            }
          }
          // Quitar la clase tras completar
          setTimeout(() => {
            anchor.classList.remove('cta-zoom');
          }, 500);
        }, 300); // Delay para percibir la animación
      });
    });
  });
</script>

<style is:global>
  @keyframes ctaZoomPulse {
    0% { transform: scale(1); }
    60% { transform: scale(1.14); }
    100% { transform: scale(1); }
  }
  .cta-zoom {
    animation: ctaZoomPulse 320ms cubic-bezier(0.2, 0.8, 0.25, 1) both;
    will-change: transform;
  }
</style>