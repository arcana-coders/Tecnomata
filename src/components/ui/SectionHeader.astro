---
// src/components/ui/SectionHeader.astro
interface Props {
  pill: string;
  title: string;
  subtitle: string;
  color?: 'blue' | 'green' | 'purple' | 'orange' | 'red';
  theme?: 'light' | 'dark';
}

const { pill, title, subtitle, color = 'blue', theme = 'light' } = Astro.props;

const colorClasses = {
  blue: 'bg-blue-100 text-blue-700',
  green: 'bg-green-100 text-green-700',
  purple: 'bg-purple-100 text-purple-700',
  orange: 'bg-orange-100 text-orange-700',
  red: 'bg-red-100 text-red-700',
}

const themeClasses = {
  title: theme === 'light' ? 'text-gray-900' : 'text-white',
  subtitle: theme === 'light' ? 'text-gray-600' : 'text-gray-300',
}
---

<div class="max-w-4xl mx-auto text-center mb-16 font-dmsans">
  <div class:list={["inline-block px-4 py-2 rounded-full text-sm font-bold mb-4", colorClasses[color]]}>
    {pill}
  </div>
  <h2 class:list={["text-4xl lg:text-6xl font-black mb-4 tracking-tighter", themeClasses.title]} set:html={title} />
  <p class:list={["text-lg leading-relaxed", themeClasses.subtitle]} set:html={subtitle} />
</div>