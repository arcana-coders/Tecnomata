---
// src/components/ui/MaterialSymbol.astro
// Legacy component - now redirects to local Icon component
import Icon from './Icon.astro';

interface Props {
  icon: string; // The name of the icon
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl'; // Tailwind text sizes
  fill?: 0 | 1; // Legacy prop - ignored
  weight?: 100 | 200 | 300 | 400 | 500 | 600 | 700; // Legacy prop - ignored
  grade?: -25 | 0 | 200; // Legacy prop - ignored
  opticalSize?: 20 | 24 | 40 | 48; // Legacy prop - ignored
  class?: string; // Optional class to pass to the icon
}

const { icon, size = 'md', class: className = '' } = Astro.props as Props;
---

<Icon name={icon} size={size} class={className} />
