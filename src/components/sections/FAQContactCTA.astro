---
// src/components/sections/FAQContactCTA.astro
import MaterialSymbol from '../ui/MaterialSymbol.astro';

interface Props {
  title: string;
  subtitle: string;
  ctaText: string;
  ctaLink: string;
  phone: string;
}

const { title, subtitle, ctaText, ctaLink, phone } = Astro.props;
---

<section class="py-24 bg-gray-50 font-dmsans">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h2 class="text-4xl lg:text-5xl font-black text-gray-900 mb-6" set:html={title} />
    <p class="text-xl text-gray-600 mb-8 leading-relaxed" set:html={subtitle} />
    <div class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center">
      <a href={ctaLink} class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold px-8 py-4 transition-all duration-300 hover:scale-105 rounded-lg shadow-lg hover:shadow-blue-500/30">
        <MaterialSymbol icon="chat" size="lg" class="mr-2" />{ctaText}
      </a>
      <a href={`tel:${phone}`} class="inline-block border-2 border-gray-900 hover:bg-gray-900 hover:text-white text-gray-900 font-bold px-8 py-4 transition-all duration-300 rounded-lg">
        <MaterialSymbol icon="phone" size="lg" class="mr-2" />{phone}
      </a>
    </div>
  </div>
</section>
