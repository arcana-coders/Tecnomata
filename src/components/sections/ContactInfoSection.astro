---
// src/components/sections/ContactInfoSection.astro
import MaterialSymbol from '../ui/MaterialSymbol.astro';

interface Props {
  imageSrc: string;
  imageAlt: string;
  location: string;
  hours: string;
  description: string;
}

const { imageSrc, imageAlt, location, hours, description } = Astro.props;
---

<section class="py-24 bg-gray-50 font-dmsans">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Imagen placeholder -->
      <div class="aspect-video bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
        <img src={imageSrc} alt={imageAlt} class="w-full h-full object-cover" />
      </div>
      
      <!-- Content -->
      <div class="space-y-6">
        <div class="space-y-2">
          <p class="text-sm text-gray-500 font-medium uppercase tracking-wider">Ubicación</p>
          <p class="text-2xl font-light text-gray-900">{location}</p>
        </div>
        
        <div class="space-y-2">
          <p class="text-sm text-gray-500 font-medium uppercase tracking-wider">Horario</p>
          <p class="text-xl font-light text-gray-900">{hours}</p>
        </div>

        <div class="pt-6">
          <h3 class="text-2xl font-black text-gray-900 mb-4">
            Desde Morelos trabajamos con negocios de todo México!
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {description}
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
