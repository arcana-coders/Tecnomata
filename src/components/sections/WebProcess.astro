---
import SectionHeader from '../ui/SectionHeader.astro';
interface Step {
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
}

const { steps } = Astro.props as Props;
---
<section class="py-24 bg-white font-dmsans">
  <div class="max-w-6xl mx-auto px-6">
    <SectionHeader
      pill="Proceso"
      title="Nuestro <span class='text-blue-600'>proceso</span>"
      subtitle="Cada proyecto sigue una metodologÃ­a probada para garantizar resultados."
      color="blue"
    />

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 mt-12">
      {steps.map((s, i) => (
        <div class="group bg-white border-2 border-gray-100 rounded-2xl p-8 hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <div class="space-y-6">
            <div class="shrink-0 w-16 h-16 rounded-full border-2 border-blue-600 text-blue-600 bg-white flex items-center justify-center font-black text-xl">
              {(i + 1).toString().padStart(2, '0')}
            </div>
            <div class="flex gap-1.5">
              <span class="w-2 h-2 bg-[#4285F4] rounded-full"></span>
              <span class="w-2 h-2 bg-[#EA4335] rounded-full"></span>
              <span class="w-2 h-2 bg-[#FBBC05] rounded-full"></span>
              <span class="w-2 h-2 bg-[#34A853] rounded-full"></span>
            </div>
            <h3 class="text-xl font-black text-gray-900">
              {s.title}
            </h3>
            <p class="text-gray-600 leading-relaxed text-sm">
              {s.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
