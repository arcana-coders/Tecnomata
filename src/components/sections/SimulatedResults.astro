---
// src/components/sections/SimulatedResults.astro
import IconWithColor from '../ui/IconWithColor.astro';

interface Props {
  seoScore: string;
  scoreDescription: string;
  ctaTitle: string;
  ctaDescription: string;
  ctaLink: string;
  ctaText: string;
}

const { seoScore, scoreDescription, ctaTitle, ctaDescription, ctaLink, ctaText } = Astro.props;
---

<div id="seo-results" class="hidden py-20 bg-gray-50 font-dmsans">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-black text-gray-900 mb-4">
        Resultados del análisis SEO
      </h2>
      <p class="text-xl text-gray-600">
        Aquí está el reporte de tu página web:
      </p>
    </div>

    <!-- Score general -->
    <div class="max-w-2xl mx-auto mb-16">
      <div class="bg-white p-8 text-center shadow-lg border rounded-xl">
        <div class="text-6xl font-black text-orange-500 mb-4">{seoScore}</div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Puntuación SEO</h3>
        <p class="text-gray-600">{scoreDescription}</p>
      </div>
    </div>

    <!-- Detalles del análisis -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- SEO Técnico -->
      <div class="bg-white p-6 border rounded-xl">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900">SEO Técnico</h3>
          <div class="text-2xl font-bold text-red-500">30%</div>
        </div>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>Velocidad muy lenta (7.2s)</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="task_alt" color="success" size="sm" />
            <span>HTTPS configurado</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>No es responsive</span>
          </li>
        </ul>
      </div>

      <!-- SEO On-Page -->
      <div class="bg-white p-6 border rounded-xl">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900">SEO On-Page</h3>
          <div class="text-2xl font-bold text-orange-500">45%</div>
        </div>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>Título muy largo</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>Sin meta descripción</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="task_alt" color="success" size="sm" />
            <span>Headings bien estructurados</span>
          </li>
        </ul>
      </div>

      <!-- SEO Local -->
      <div class="bg-white p-6 border rounded-xl">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900">SEO Local</h3>
          <div class="text-2xl font-bold text-red-500">20%</div>
        </div>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>Sin Google My Business</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>Datos de contacto incompletos</span>
          </li>
          <li class="flex items-center gap-2">
            <IconWithColor name="cancel" color="error" size="sm" />
            <span>No aparece en Maps</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- CTA después de resultados -->
    <div class="text-center mt-16">
      <h3 class="text-2xl font-black text-gray-900 mb-4">
        {ctaTitle}
      </h3>
      <p class="text-gray-600 mb-8">
        {ctaDescription}
      </p>
      <a href={ctaLink} class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold px-8 py-4 transition-all duration-300 rounded-lg">
        <span class="flex items-center gap-2">
          <IconWithColor name="contact_support" color="white" size="lg" />
          {ctaText}
        </span>
      </a>
    </div>
  </div>
</div>
