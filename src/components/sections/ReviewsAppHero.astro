---
// src/components/sections/ReviewsAppHero.astro
import MaterialSymbol from '../ui/MaterialSymbol.astro';

interface Props {
  subtitle: string;
  title: string;
  description: string;
  ctaText: string;
  ctaHref: string;
  stats: { number: string; label: string; suffix: string }[];
}

const { subtitle, title, description, ctaText, ctaHref, stats } = Astro.props;
---

<section class="bg-white font-dmsans py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      <!-- Left Column: Content -->
      <div class="space-y-8">
        <p class="text-lg font-semibold text-primary">{subtitle}</p>
  <h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-gray-900 leading-tight tracking-tighter" set:html={title} data-typewriter data-type-speed="46" data-type-delay="200" data-type-loop="true" data-type-loop-pause="4000" />
        <p class="text-xl text-gray-600 leading-relaxed" set:html={description} />
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={ctaHref} class="bg-primary hover:bg-primary-dark text-white px-8 py-4 font-bold text-lg rounded-lg transition-all duration-300 shadow-lg hover:shadow-blue-500/30">
            <MaterialSymbol icon="verified" size="lg" class="mr-2" />{ctaText}
          </a>
        </div>

        <!-- Stats Display -->
        <div class="grid grid-cols-3 gap-8 pt-8 border-t border-gray-100 mt-8">
          {stats.map(stat => (
            <div>
              <div class="text-3xl font-black text-gray-900">{stat.number}{stat.suffix}</div>
              <div class="text-sm text-gray-600">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column: Image Slot -->
      <div class="hidden lg:block">
        <slot name="image" />
      </div>
    </div>
  </div>
</section>