{
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "astro: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "astro: build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "astro: preview",
      "type": "shell",
      "command": "npm",
      "args": ["run", "preview"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "format: prettier",
      "type": "shell",
      "command": "npx",
      "args": [
        "prettier",
        "--write",
        "."
      ],
      "problemMatcher": []
    }
  ]
}